<?xml version="1.0" encoding="utf-8"?>
<resources>

    <string name="roboto_regular" translatable="false">sans-serif</string>
    <string name="roboto_medium" translatable="false">sans-serif-medium</string>
    <string name="roboto_light" translatable="false">sans-serif-light</string>


    <style name="Bold12" parent="FontBold">
        <item name="android:textSize">12sp</item>
    </style>


    <style name="Medium8" parent="FontMedium">
        <item name="android:textSize">8sp</item>
    </style>


    <style name="Medium12" parent="FontMedium">
        <item name="android:textSize">12sp</item>
    </style>


    <style name="Regular8" parent="FontRegular">
        <item name="android:textSize">8sp</item>
    </style>

    <style name="Regular14" parent="FontRegular">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/hintColor</item>
        <item name="itemTextColor">@color/hintColor</item>

    </style>

    <style name="Regular14Inactive" parent="Regular14">
        <item name="android:textColor">@color/yellow</item>
        <item name="itemTextColor">@color/yellow</item>
    </style>

    <style name="Regular14Active" parent="Regular14">
        <item name="android:textColor">@color/yellow</item>
    </style>

    <style name="Regular15" parent="FontRegular">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/defaultColor</item>
    </style>
    <style name="Regular16" parent="FontRegular">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/defaultColor</item>
    </style>

    <style name="Regular19" parent="FontRegular">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/defaultColor</item>
    </style>

    <style name="Regular18" parent="FontRegular">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/defaultColor</item>
    </style>

    <style name="Bold22" parent="FontBold">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/defaultColor</item>
    </style>


    <style name="SFBold15" parent="FontSFBold">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="SFMedium12" parent="FontSFBold">
        <item name="android:textSize">12sp</item>
    </style>


    <style name="CommonText">
        <item name="android:fontFamily">@string/roboto_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/defaultColor</item>
    </style>

    <style name="Headline1" parent="CommonText">
        <item name="android:fontFamily">@string/roboto_light</item>
        <item name="android:textSize">@dimen/headline1_size</item>
        <item name="android:lineSpacingExtra">@dimen/headline1_line_spacing</item>
    </style>

    <style name="Headline2" parent="CommonText">
        <item name="android:fontFamily">@string/roboto_light</item>
        <item name="android:textSize">@dimen/headline2_size</item>
        <item name="android:lineSpacingExtra">@dimen/headline2_line_spacing</item>
    </style>

    <style name="Headline3" parent="CommonText">
        <item name="android:fontFamily">@string/roboto_regular</item>
        <item name="android:textSize">@dimen/headline3_size</item>
        <item name="android:lineSpacingExtra">@dimen/headline3_line_spacing</item>
    </style>

    <style name="Headline4" parent="CommonText">
        <item name="android:fontFamily">@string/roboto_regular</item>
        <item name="android:textSize">@dimen/headline4_size</item>
        <item name="android:lineSpacingExtra">@dimen/headline4_line_spacing</item>
    </style>

    <style name="Headline5" parent="CommonText">
        <item name="android:fontFamily">@string/roboto_regular</item>
        <item name="android:textSize">@dimen/headline5_size</item>
        <item name="android:lineSpacingExtra">@dimen/headline5_line_spacing</item>
    </style>

    <style name="Headline6" parent="CommonText">
        <item name="android:fontFamily">@string/roboto_medium</item>
        <item name="android:textSize">@dimen/headline6_size</item>
        <item name="android:lineSpacingExtra">@dimen/headline6_line_spacing</item>
    </style>

    <style name="Subtitle1" parent="CommonText">
        <item name="android:fontFamily">@string/roboto_regular</item>
        <item name="android:textSize">@dimen/subtitle1_size</item>
        <item name="android:lineSpacingExtra">@dimen/subtitle1_line_spacing</item>
    </style>

    <style name="Subtitle2" parent="CommonText">
        <item name="android:fontFamily">@string/roboto_medium</item>
        <item name="android:textSize">@dimen/subtitle2_size</item>
        <item name="android:lineSpacingExtra">@dimen/subtitle2_line_spacing</item>
    </style>

    <style name="Body1" parent="CommonText">
        <item name="android:fontFamily">@string/roboto_regular</item>
        <item name="android:textSize">@dimen/body1_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/body1_text_line_spacing</item>
    </style>

    <style name="Body1.Meduim">
        <item name="android:fontFamily">@string/roboto_medium</item>
    </style>

    <style name="Body2" parent="CommonText">
        <item name="android:fontFamily">@string/roboto_regular</item>
        <item name="android:textSize">@dimen/body2_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/body2_text_line_spacing</item>
    </style>

    <style name="Button" parent="CommonText">
        <item name="android:fontFamily">@string/roboto_medium</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">@dimen/button_text_line_spacing</item>
    </style>

    <style name="Caption" parent="CommonText">
        <item name="android:fontFamily">@string/roboto_regular</item>
        <item name="android:textSize">@dimen/caption_size</item>
        <item name="android:lineSpacingExtra">@dimen/caption_line_spacing</item>
    </style>

    <style name="CaptionInactive" parent="Caption">
        <item name="android:textColor">@color/hintColor</item>
    </style>

    <style name="CaptionDark" parent="Caption">
        <item name="android:textColor">@color/backgroundColor</item>
    </style>

    <style name="Caption.Bold" parent="Caption">
        <item name="android:fontFamily">@string/roboto_medium</item>
    </style>

    <style name="Overline" parent="CommonText">
        <item name="android:fontFamily">@string/roboto_regular</item>
        <item name="android:textSize">@dimen/overline_size</item>
        <item name="android:lineSpacingExtra">@dimen/overline_line_spacing</item>
    </style>

    <style name="EditTextHintStyle" parent="Caption">
        <item name="android:textColor">@color/hintColor</item>
        <item name="colorControlNormal">@color/hintColor</item>
        <item name="colorControlActivated">@color/defaultColor</item>
        <item name="colorControlHighlight">@color/defaultColor</item>
    </style>

</resources>