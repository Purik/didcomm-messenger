<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/common_gap_16"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.socialsirius.messenger.design.AvatarView
            android:id="@+id/avatarImageView"
            android:layout_width="@dimen/common_gap_64"
            android:layout_height="@dimen/common_gap_64"
            app:mode="large"
            app:showStatus="true"

            />
        <TextView
            android:id="@+id/nameTextView"
            style="@style/Headline6"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/common_gap_16"
            android:layout_height="wrap_content"
            tools:text="Jessica jhgjsdfsdfdsfdsfsdfsdf" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/common_gap_16">
        <TextView

            style="@style/Subtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:text="DID:" />
        <TextView
            android:id="@+id/didTextView"
            style="@style/Headline7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="Jessica jhgjsdfsdfdsfdsfsdfsdf" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/common_gap_16">
        <TextView

            style="@style/Subtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:text="Verkey:" />
        <TextView
            android:id="@+id/verkeyTextView"
            style="@style/Headline7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="Jessica jhgjsdfsdfdsfdsfsdfsdf" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/common_gap_16">
        <TextView

            style="@style/Subtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:text="Endpoint:" />
        <TextView
            android:id="@+id/metaTextView"
            style="@style/Headline7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="Jessica jhgjsdfsdfdsfdsfsdfsdf" />
    </LinearLayout>

</LinearLayout>
</layout>