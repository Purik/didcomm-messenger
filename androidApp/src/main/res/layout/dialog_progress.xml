<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="250dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/common_gap_32"
    android:background="@drawable/bg_dialog"
    android:paddingBottom="@dimen/common_gap_16"
    android:paddingStart="@dimen/common_gap_32"
    android:paddingEnd="@dimen/common_gap_32"
    android:paddingTop="@dimen/common_gap_16">

    <TextView
        android:id="@+id/progressTitle"
        style="@style/Headline6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/wait"
        android:textAlignment="center"
        android:layout_marginBottom="@dimen/common_gap_16"/>

    <TextView
        android:id="@+id/progressHintTitle"
        style="@style/Subtitle1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/wait"
        android:visibility="gone"
        android:textAlignment="center"
        android:textColor="@color/hintColor"
        android:layout_marginBottom="@dimen/common_gap_16"/>


    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_gap_40"/>

</LinearLayout>