<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/common_gap_8"
    app:cardBackgroundColor="@color/backgroundColor"
    app:cardCornerRadius="@dimen/common_gap_8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_gap_16">

        <ImageView
            android:id="@+id/iconView"
            android:layout_width="@dimen/common_gap_40"
            android:layout_height="@dimen/common_gap_40"
            android:background="@drawable/bg_circle_blue"
            android:backgroundTint="@color/cardOrange"
            android:src="@drawable/ic_connection_credentials2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_gap_8"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/common_gap_8"
            android:orientation="vertical">

            <TextView
                android:id="@+id/topTextView"
                style="@style/Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                tools:text="Vector nothk sjfl skdf;lkfksdjfksljflksjdlfsdk" />

            <TextView
                android:id="@+id/bottomTextView"
                style="@style/Subtitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                tools:text="Vector nothsdk" />

        </LinearLayout>

        <TextView
            android:id="@+id/attributesTextView"
            style="@style/Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_gap_8"
            android:textColor="@color/hintColor"
            tools:text="7 attributes" />

    </LinearLayout>

</androidx.cardview.widget.CardView>